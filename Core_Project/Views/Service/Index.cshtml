@using EntityLayer.Concrete
@model List<Service>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NAdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="page-header">
                <h4 class="page-title"> Servoce List Table </h4>
                <h4><a href="/Service/AddService/" class="btn btn-outline-primary">Add a Service</a></h4>
            </div>


            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Title</th>
                            <th>Image</th>
                            <th>Edit</th>
                            <th>Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ServiceID</td>
                                <td>@item.Title</td>
                                <th scope="row">
                                    <div class="media align-items-center">
                                        <a href="#" class="avatar mr-3">
                                            <img alt="Image placeholder" src="@item.ImageUrl">
                                        </a>

                                    </div>
                                </th>
                                <td><a href="/Service/EditService/@item.ServiceID"  class="btn btn-outline-warning">Edit</a></td>
                                <td><a href="/Service/DeleteService/@item.ServiceID" class="btn btn-outline-danger">Delete</a></td>

                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
