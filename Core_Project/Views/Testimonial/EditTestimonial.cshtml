@model EntityLayer.Concrete.Testimonial
@{
    ViewData["Title"] = "EditTestimonial";
    Layout = "~/Views/Shared/_NAdminLayout.cshtml";
}


@using (Html.BeginForm("EditTestimonial", "Testimonial", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Edit Reference Form</h4>

                <form class="forms-sample">
                    @Html.HiddenFor(x => x.TestimonialID)

                    <div class="form-group">
                        <label>Name</label>
                        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Company</label>
                        @Html.TextBoxFor(x => x.Company, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Title</label>
                        @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Image URL</label>
                        @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Comment</label>
                        @Html.TextAreaFor(x => x.Comment, 8, 3, new { @class = "form-control" })
                    </div>

                    <button type="submit" class="btn btn-primary mr-2">Save</button>
                    <a href="/Testimonial/Index/" class="btn btn-dark">Cancel</a>
                </form>
            </div>
        </div>
    </div>


}