@using EntityLayer.Concrete
@model List<Skill>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NAdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">

            <div class="page-header">
                <h4 class="page-title"> Skill List Table </h4>
                <h4><a href="/Skill/AddSkill/" class="btn btn-outline-primary">Add a Skill</a></h4>
            </div>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col" class="sort" data-sort="name">#</th>
                            <th scope="col" class="sort" data-sort="budget">Title</th>
                            <th scope="col" class="sort" data-sort="Value">Status</th>
                            <th scope="col">Delete</th>
                            <th scope="col" class="sort" data-sort="completion">Edit</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th>@item.SkillID</th>
                                <td class="budget">
                                    @item.Title
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <span class="completion mr-2">@item.Value %</span>  
                                    </div>
                                </td>
                                <td><a href="/Skill/DeleteSkill/@item.SkillID" class="btn btn-outline-danger">Delete</a></td>
                                <td><a href="/Skill/EditSkill/@item.SkillID" class="btn btn-outline-warning">Edit</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
