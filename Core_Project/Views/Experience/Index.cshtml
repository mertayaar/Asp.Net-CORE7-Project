@using EntityLayer.Concrete
@model List<Experience>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NAdminLayout.cshtml";
}


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="page-header">
                <h4 class="page-title"> Experience List Table </h4>
                <h4><a href="/Experience/AddExperience/" class="btn btn-outline-primary">Add an Experience</a></h4>
            </div>
              

                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Title</th>
                                <th>Company</th>
                                <th>Date</th>
                                <th>Description</th>
                                <th>Delete</th>
                                <th>Edit</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.ExperienceID</td>
                                    <td>@item.Name</td>
                                    <td>@item.Company</td>
                                    <td><label class="badge badge-info">@item.Date</label></td>
                                    <td>@item.Description</td>
                                    <td><a href="/Experience/DeleteExperience/@item.ExperienceID" class="btn btn-outline-danger">Delete</a></td>
                                    <td><a href="/Experience/EditExperience/@item.ExperienceID" class="btn btn-outline-warning">Edit</a></td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
</div>