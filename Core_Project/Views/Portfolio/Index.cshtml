@using EntityLayer.Concrete
@model List<Portfolio>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NAdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="page-header">
                <h4 class="text-white mb-0"> Projects </h4>
                <h4 class="text-white mb-0"><a href="/Portfolio/AddPortfolio/" class="btn btn-outline-primary">Add a Project</a></h4>
            </div>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col" class="sort" data-sort="name">Name</th>
                            <th scope="col" class="sort" data-sort="status">URL</th>
                            <th scope="col" class="sort" data-sort="completion">Completion</th>
                            <th scope="col">Delete</th>
                            <th scope="col">Edit</th>
                        </tr>
                    </thead>
                    <tbody class="list">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th scope="row">
                                    <div class="media align-items-center">
                                        <a href="#" class="avatar rounded-circle mr-3">
                                            <img alt="Image placeholder" src="/images/platformImage/@item.Platform">
                                        </a>
                                        <div class="media-body">
                                            <span class="name mb-0 text-sm">@item.Name</span>
                                        </div>
                                    </div>
                                </th>

                                <td>
                                    <span class="badge badge-dot mr-4">
                                        <i class="bg-green"></i>
                                        <span class="status"><a href="@item.ProjectUrl" style="all:unset">@item.ProjectUrl</a></span>
                                    </span>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <span class="completion mr-2">@item.Value%</span>
                                        <div>
                                            <div class="progress">
                                                <div class="progress-bar bg-warning" role="progressbar" aria-valuenow="@item.Value" aria-valuemin="0" aria-valuemax="100" style="width: @item.Value%;"></div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                                <td><a href="/Portfolio/DeletePortfolio/@item.PorfolioID" class="btn btn-outline-danger">Delete</a></td>
                                <td><a href="/Portfolio/EditPortfolio/@item.PorfolioID" class="btn btn-outline-warning">Edit</a></td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>