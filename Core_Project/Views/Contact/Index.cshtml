@using EntityLayer.Concrete
@model List<Message>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NAdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="page-header">
                <h4 class="page-title"> Contacts </h4>
            </div>


            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Sender</th>
                            <th>Date</th>
                            <th>Details</th>
                            <th>Delete</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.MessageID</td>
                                <td>@item.Name</td>
                                <td><label class="badge badge-info">@(((DateTime)item.Date).ToString("MM-dd-yyyy"))</label></td>
                                <td><a href="/Contact/ContactDetails/@item.MessageID" class="btn btn-outline-warning">Details</a></td>
                                <td><a href="/Contact/DeleteContact/@item.MessageID" class="btn btn-outline-danger">Delete</a></td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>